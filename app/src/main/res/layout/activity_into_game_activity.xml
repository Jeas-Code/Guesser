<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_bg_img4"
    >

    <Button
    android:layout_width="240px"
    android:layout_height="80px"
    android:text="查看答案"
    android:textSize="16sp"
    android:id="@+id/read_answer_btn"
    android:layout_gravity="right"
    android:layout_marginTop="120px"
    android:textColor="#fff"
    android:background="@drawable/btn_selector"
    />

    <TextView
        android:layout_width="300px"
        android:layout_height="80px"
        android:text="得分: "
        android:textSize="16sp"
        android:id="@+id/score_label"
        android:layout_gravity="left"
        android:layout_marginTop="20px"
        android:layout_marginLeft="60px"
        android:textColor="#fff"
        android:background="@drawable/btn_selector"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's your guess ?"
        android:textSize="30sp"
        android:textColor="#caffffff"
        android:layout_gravity="center"
        android:layout_marginTop="80px"
        android:textStyle="bold"
        android:id="@+id/guess_label"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1000px"
        android:background="#000"
        android:scaleType="fitXY"
        android:layout_marginTop="80px"
        android:id="@+id/game_picture"
        />
    <TextView
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:text="Your Guess: "
        android:textSize="20sp"
        android:textColor="#ad990413"
        android:layout_gravity="center"
        android:layout_marginTop="80px"
        android:textStyle="bold"
        android:background="#9de1e0e0"
        android:id="@+id/guess_answer_label"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/input_answer"
        android:layout_marginTop="80px"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:hint="Your answer:"
        android:textColor="#000"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColorHint="#d2008ef9"
        android:background="#fff"
        android:textScaleX="1" />

    <Button
        android:layout_width="260px"
        android:layout_height="120px"
        android:text="提交"
        android:textSize="20sp"
        android:id="@+id/submit_answer_btn"
        android:layout_gravity="center"
        android:layout_marginTop="60px"
        android:textColor="#fff"
        android:background="@drawable/btn_selector"
        />

    <TextView
        android:layout_width="240px"
        android:layout_height="wrap_content"
        android:text="得分: "
        android:textSize="16sp"
        android:textColor="#ad990413"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:textStyle="bold"
        android:background="#9de1e0e0"
        android:id="@+id/serial_label"
        android:gravity="center"
        />
</LinearLayout>