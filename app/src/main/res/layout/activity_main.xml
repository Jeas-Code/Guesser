<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/game_bg_img3"
    tools:context="com.example.jeas.netapp.MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guesser and Drawer"
        android:textSize="30sp"
        android:textColor="#caffffff"
        android:layout_gravity="center"
        android:layout_marginTop="240px"
        android:textStyle="bold"
        android:id="@+id/game_title"
        />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="开始游戏"
        android:id="@+id/start_game_btn"
        android:layout_gravity="center"
        android:layout_marginTop="280px"
        android:textColor="#fff"
        android:textSize="20sp"
        android:background="@drawable/btn_selector"
        />
    <Button
    android:layout_width="300px"
    android:layout_height="wrap_content"
    android:text="邀请好友"
    android:id="@+id/invite_friends_btn"
    android:layout_gravity="center"
    android:layout_marginTop="150px"
    android:textColor="#fff"
    android:textSize="20sp"
    android:background="@drawable/btn_selector"
    />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="绘画"
        android:id="@+id/draw_btn"
        android:layout_gravity="center"
        android:layout_marginTop="150px"
        android:textColor="#fff"
        android:textSize="20sp"
        android:background="@drawable/btn_selector"
        />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="设置"
        android:id="@+id/setting_btn"
        android:layout_gravity="center"
        android:layout_marginTop="150px"
        android:textColor="#fff"
        android:textSize="20sp"
        android:background="@drawable/btn_selector"
        />
    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="退出游戏"
        android:textSize="20sp"
        android:id="@+id/exit_game_btn"
        android:layout_gravity="center"
        android:layout_marginTop="150px"
        android:textColor="#fff"
        android:background="@drawable/btn_selector"
        />

    <Button
        android:layout_width="500px"
        android:layout_height="500px"
        android:id="@+id/frame_animation_btn"
        android:layout_gravity="right"
        android:layout_marginTop="100px"
        android:textColor="#fff"
        android:background="#000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的好友"
        android:textSize="14sp"
        android:id="@+id/frame_animation_label"
        android:layout_marginRight="120px"
        android:layout_gravity="right"
        android:layout_marginTop="-60px"
        android:textColor="#fff"
        />

</LinearLayout>
