<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_into_invite_friends"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/game_bg_img2"
    tools:context="com.example.jeas.netapp.into_invite_friends">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好友列表"
        android:textSize="30sp"
        android:textColor="#caffffff"
        android:layout_gravity="center"
        android:layout_marginTop="200px"
        android:textStyle="bold"
        android:id="@+id/invite_friends_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好友列表暂时为空，快来添加吧！"
        android:textSize="20sp"
        android:textColor="#caffffff"
        android:layout_gravity="center"
        android:layout_marginTop="200px"
        android:textStyle="bold"
        android:id="@+id/friends_list"
        />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="添加好友"
        android:textSize="20sp"
        android:id="@+id/add_friends_btn"
        android:layout_gravity="center"
        android:layout_marginTop="800px"
        android:textColor="#fff"
        android:background="@drawable/btn_selector"
        />


</LinearLayout>
