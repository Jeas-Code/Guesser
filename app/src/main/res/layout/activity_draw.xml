<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_draw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jeas.netapp.Draw">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始你的创作吧! "
        android:textSize="30sp"
        android:textColor="#cacf4d4d"
        android:layout_gravity="center"
        android:layout_marginTop="150px"
        android:textStyle="bold"
        android:id="@+id/draw_title"
        />

    <com.example.jeas.netapp.DrawImageView
        android:id="@+id/paint_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120px"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/game_notice_img2"
        android:id="@+id/draw_img"
        android:layout_gravity="center"
        />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20px"
    >

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="清空面板"
        android:textSize="20sp"
        android:id="@+id/reset_panal_btn"
        android:textColor="#fff"
        android:background="@drawable/btn_selector"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:layout_width="500px"
        android:layout_height="500px"
        android:text="保存图片"
        android:layout_alignParentRight="true"
        android:id="@+id/save_picture_btn"
        android:textColor="#fff"
        android:background="#000"
        />

</RelativeLayout>
    
</LinearLayout>
